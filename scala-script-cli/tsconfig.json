{
  "compilerOptions": {
    "target": "ES2017",
    "module": "Node16",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "out",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["../src/cli/**/*.ts", "../src/language/**/*.ts"],
  "exclude": ["../src/language/main.ts", "../src/language/main-browser.ts", "out", "node_modules"]
}
