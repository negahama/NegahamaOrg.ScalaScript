{
  "name": "scala-script",
  "version": "0.6.0",
  "displayName": "Scala-Script",
  "description": "Programming language that is mixed Scala and TypeScript's features",
  "publisher": "NegahamaOrg",
  "author": "Samuel Kang",
  "homepage": "https://github.com/negahama/NegahamaOrg.ScalaScript",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "bin": {
    "ssc": "bin/cli.js"
  },
  "files": [
    "bin",
    "out",
    "src"
  ],
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ScalaScript",
    "TypeScript",
    "compiler",
    "language",
    "Scala"
  ],
  "bugs": {
    "url": "https://github.com/negahama/NegahamaOrg.ScalaScript/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/negahama/NegahamaOrg.ScalaScript.git"
  },
  "scripts": {
    "all": "npm run langium:generate && npm run build && npm run lint && npm run cli1",
    "cli0": "node bin/cli.js generate samples/*.ss -d samples/generated",
    "cli1": "node bin/cli.js generate test/*.ss -d test/generated",
    "build": "tsc -b tsconfig.json",
    "watch": "tsc -b tsconfig.json --watch",
    "lint": "eslint src --ext ts",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch"
  },
  "dependencies": {
    "chalk": "~5.3.0",
    "commander": "~11.0.0",
    "langium": "~3.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "~7.3.1",
    "@typescript-eslint/parser": "~7.3.1",
    "eslint": "~8.57.0",
    "langium-cli": "~3.3.0",
    "typescript": "~5.1.6"
  },
  "volta": {
    "node": "18.19.1",
    "npm": "10.2.4"
  }
}